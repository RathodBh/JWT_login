<%- include("header") -%>
    <section id="signin">
        <div class="container" id="box">
            <div class="row d-flex jcc alc h100">
                <div class="col col-2">
                    <form class="form-container p-4" method="post" action="/login">
                        <div class="py-1">
                            <img src="assets/images/logo.svg" alt="">
                        </div>
                        <h2 class="txt-white fs-24 fw-500 my-2">Welcome Back!</h2>
                        <div class="my-1">
                            <label for="email" class="my-05 dib txt-white">Email</label>
                            <input type="email" class="w100 p-1" id="email" name="email" required>
                            <span class="db txt-red fs-14 py-05" id="emailErr"><%= emailErr %></span>
                        </div>
                        <div class="my-1">
                            <label for="pwd" class="my-05 dib txt-white">Password</label>
                            <input type="password" class="w100 p-1" id="pwd" name="pwd" required>
                        </div>
                        <span class="db txt-red fs-14 py-05" id="passErr"><%= passErr %></span>
                        <input type="submit" value="Log in" class="w100 p-1 my-1 back-green txt-white bn cp">
                        <div class="mt-4">
                            <p class="t-white">Don't have an account? <a href="/signup" class="txt-red">Sign up Here.</a></p>
                        </div>
                    </form>
                </div>
                <div class="col col-2" id="logo-bottom-container">
                    <img src="assets/images/bou.svg" alt="" id="logo-bottom">
                </div>
            </div>
        </div>
    </section>

    <%- include("footer") -%>